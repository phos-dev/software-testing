                </step>
                <step>
                    <stepId>3E</stepId>
                    <action>Acionar gravação e minimizar programa</action>
                    <condition/>
                    <response>Gravação é iniciada e programa minimizada</response>
                </step>
                <step>
                    <stepId>4E</stepId>
                    <action>Digite um número de conta de origem no campo número[RNF01]</action>
                    <condition>Interface do sistema de banco está em execução</condition>
                    <response>O número digitado aparece no campo numero</response>

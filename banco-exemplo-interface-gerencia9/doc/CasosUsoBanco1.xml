                    <action>Selecione o tipo Conta</action>
                    <condition/>
                    <response>Apenas a opção Conta é selecionada</response>
                </step>
                <step>
                    <stepId>7E</stepId>
                    <action>Acione a opção transferir</action>
                    <condition>Já existem 100 contas cadastradas</condition>
                    <response>Exibe um popup solicitando o número da conta destino</response>
                </step>
                <step>
                    <stepId>8E</stepId>
                    <action>Digite o número de conta para conta destino e confirme</action>
                    <condition/>
                    <response>Mensagem do sistema, informando que a operação foi concluída com sucesso</response>
                </step>
                <step>
                    <stepId>9E</stepId>
                    <action>Confirme operação</action>
                    <condition/>
                    <response>Fecha o popup</response>
                </step>
                <step>
                    <stepId>10E</stepId>
                    <action>Minimizar programa do banco e maximizar programa auxiliar de gravação de tela</action>
                    <condition/>
                    <response>Programa de gravação auxiliar é exibido</response>
                </step>
                <step>
                    <stepId>11E</stepId>
                    <action>Parar gravação</action>
                    <condition/>
                    <response>Gravação é parada</response>
                </step>
                <step>
                    <stepId>12E</stepId>
                    <action>Executar gravação e checar se o número de frames entre o passo 8E e 9E não ultrapassa 60</action>
                    <condition/>
                    <response>Se maior que 60, teste falhou. Se menor, teste passou.</response>
                </step>
            </flow>

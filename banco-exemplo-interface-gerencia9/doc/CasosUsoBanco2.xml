        <useCase>
            <id>UC_01</id>
            <name>Cadastrando contas</name>
            <description>O banco deve permitir cadastrar contas dos tipos corrente, poupança, especial e imposto. Contas são identificadas unicamente pelo seu número.</description>
            <setup>A interface gráfica está em execução</setup>
            <flow>
                <description>Cadastrando uma Conta</description>
                <fromSteps>START</fromSteps>
                <toSteps>END</toSteps>
                <step>
                    <stepId>1P</stepId>
                    <action>Digite um número de valor[RFN01, RFN02]</action>
                    <condition/>
                    <response>O número digitado aparece no campo valor</response>
                </step>
                <step>
                    <stepId>2P</stepId>
                    <action>Digite um numero no campo numero</action>
                    <condition/>
                    <response>O número digitado aparece no campo numero</response>
                </step>
                <step>
                    <stepId>3P</stepId>
                    <action>Selecione a opção Conta</action>
                    <condition/>
                    <response>Apenas a opção Conta aparece selecionada</response>
                </step>
                <step>
                    <stepId>4P</stepId>
                    <action>Clique em cadastrar</action>
                    <condition>O número da conta a ser cadastrada não existe.</condition>
                    <response>A mensagem de sucesso é exibida</response>
                </step>
            </flow>
            <flow>
                <description>poupança</description>
                <fromSteps>2P</fromSteps>
                <toSteps>4P</toSteps>
                <step>
                    <stepId>1A</stepId>
                    <action>Selecione a opção Poupança</action>
                    <condition/>
                    <response>Apenas a opção Poupança é selecionada</response>
                </step>
            </flow>
            <flow>
                <description>especial</description>
                <fromSteps>2P</fromSteps>
                <toSteps>4P</toSteps>
                <step>
                    <stepId>1B</stepId>
                    <action>Selecione a opção Especial</action>
                    <condition/>
                    <response>Apenas a opção Especial é selecionada</response>
                </step>
            </flow>
            <flow>
                <description>imposto</description>
                <fromSteps>2P</fromSteps>
                <toSteps>4P</toSteps>
                <step>
                    <stepId>1C</stepId>
                    <action>Selecione a opção Imposto</action>
                    <condition/>
                    <response>Apenas a opção Imposto é selecionada</response>
                </step>
            </flow>
            <flow>
                <description>com número já existente</description>
                <fromSteps>3P</fromSteps>
                <toSteps>END</toSteps>
                <step>
                    <stepId>1D</stepId>
                    <action>Clique em cadastrar</action>
                    <condition>O número da conta a ser cadastrada já existe.</condition>
                    <response>Conta não é cadastrada e a mensagem de conta não cadastrada é exibida</response>
                </step>
            </flow>
            <flow>
                <description>com valor negativo</description>
                <fromSteps>START</fromSteps>
                <toSteps>END</toSteps>
                <step>
                    <stepId>1E</stepId>
                    <action>Digite um número menor que zero no campo valor [RFN01, RFN02]</action>
                    <condition/>
                    <response>O número digitado aparece no campo valor</response>
                </step>
                <step>
                    <stepId>2E</stepId>
                    <action>Digite um numero no campo numero</action>
                    <condition/>
                    <response>O número digitado aparece no campo numero</response>
                </step>
                <step>
                    <stepId>3E</stepId>
                    <action>Selecione a opção conta</action>
                    <condition/>
                    <response>Apenas a opção conta aparece selecionada</response>
                </step>
                <step>
                    <stepId>4E</stepId>
                    <action>Clique em cadastrar</action>
                    <condition/>
                    <response>Mensagem de conta não cadastrada é exibida</response>
                </step>
            </flow>
        </useCase>
